<%- include( consV.layouts.head , {also_add:[consV.css.sign , consV.css.mmodal,
consV.css.customBS]})%>
<body>
	<%- include( consV.layouts.nodeJsObToClientJsOb , {varName: "FaLaUrl" , varValue: FaLaUrl })%>
	<%- include( consV.layouts.nodeJsObToClientJsOb , {varName: "EnLaUrl" , varValue: EnLaUrl })%>
	<%- include( consV.layouts.nodeJsObToClientJsOb , {varName: "lang" , varValue: lang })%>
	
	<%- include( consV.layouts.header )%>
    <%- include(consV.layouts.sidebar_navbar, {active:["signInUp","login"]})%>
	<%- include( consV.layouts.navbar , {active:"none", stick: true} )%>
    <%- include( consV.layouts.mmodal ) %>
    <!-- main -->
    <main id="mainPart">
        <div>
            <div style="z-index: 2" class="sign_container">
                <div class="sign_header">
                    <span>
                        خوش آمدید
                        <br>
                        ورود به سایت
                    </span>
                </div>
                <div class="sign_body">
                    <form id="sign_from" action="/<%=lang+consV.pages.signIn%>" method="post" onsubmit="signIn_modal(event, '<%=lang%>')">
                        <input id="email" class="email" type="email" name="email" placeholder="ایمیل">
                        <span class="fa fa-user fa-custom"></span>
                        <input id="password" class="password" type="password" name="password" placeholder="پسورد">
                        <span class="fa fa-lock fa-custom"></span>
                        <input id="submit" class="login" type="submit" value="ورود">
                    </form>
                </div>
            </div>
        </div>
        <div>
            <div style="transform: rotate(5deg); z-index: 1" class="sign_container"></div>
        </div>
        <div>
            <div style="transform: rotate(-5deg); z-index: 1" class="sign_container"></div>
        </div>
    </main>
    <!-- main end -->
    
	<%- include(consV.layouts.footer)%>
    <!-- scripts -->
	<%- include(consV.layouts.scripts , {also_add:[consV.js.main, consV.js.sign,
    consV.js.mmodal, consV.js.jshashes]})%>
    <script> setDefaultMmodal('در حال پردازش'); navbarDropdown(); </script>
    <!-- scripts end -->
</body>
</html>
