<form id="addResForm" method="post" action="<%='/' + lang + consV.pages.panel.adminStuff.addEditResources%>"
encType="multipart/form-data" onsubmit="<%=formOnSubmit%>">

	<input id="formResId" name="formResId" value="" style="display: none" type="text">
	<div class="form-group">
		<label class="Font18px mr-3" for="formResLang">
			زبان
		</label>
		<select id="formResLang" name="formResLang" class="custom-select w-25 FontYekan mr-3" onchange=<%=langOnchange%>>
			<option value="fa" selected>فارسی</option>
			<option value="en">انگلیسی</option>
		</select>
	</div>
	<hr>
	<div class="form-group">
		<label class="Font18px mr-3" for="formResType">
			نوع منبع
		</label>
		<select id="formResType" name="formResType" class="custom-select w-25 FontYekan mr-3">
			<option value="person" selected>شخص</option>
			<option value="book">کتاب</option>
			<option value="webSite">وب سایت</option>
		</select>
	</div>

	<div class="form-group">
		<label class="Font18px" for="formResName">
			اسم
		</label>
		<input id="formResName" name="formResName" class="form-control" type="text">
	</div>

	<div class="form-group">
		<label class="Font18px" for="formResFamily">
			فامیل
		</label>
		<input id="formResFamily" name="formResFamily" class="form-control" type="text">
	</div>
	
	<div class="form-group">
		<label class="Font18px" for="formResWriter">
			نویسنده&nbsp
			<%- include( consV.layouts.questionMark , {QMTitlle: "نام نویسنده ی کتاب" , QMContent: ""} ) %> 
		</label>
		<input id="formResWriter" name="formResWriter" class="form-control" type="text">
	</div>

	<div class="form-group">
		<label class="Font18px" for="formResURL">
			آدرس&nbsp
			<%- include( consV.layouts.questionMark , {QMTitlle: "URL وب سایت" , QMContent: ""} ) %> 
		</label>
		<input id="formResURL" name="formResURL" class="form-control" type="text">
	</div>

	<div class="form-group">
		<label class="Font18px mr-3" for="formResLic">
			مجوز
		</label>
		<select id="formResLic" name="formResLic" class="custom-select w-25 FontYekan mr-3">
			<option value="public_domain">کاملا آزاد</option>
			<option value="cc0">سی سی ۰</option>
			<option value="other" selected>دیگر</option>
		</select>
	</div>

	<div class="form-group">
		<label class="Font18px" for="formResLicO">
			مجوز&nbsp
		</label>
		<input id="formResLicO" name="formResLicO" class="form-control" type="text">
	</div>

	<div class="form-group">
		<label class="Font18px" for="formResEx">
			توضیح مختصر درباره منبع&nbsp
		</label>
		<input id="formResEx" name="formResEx" class="form-control" type="text">
	</div>

	<div class="form-group">
		<label for="file">انتخاب عکس</label>
		<input id="file" name="file" class="form-control-file" type="file" value="انتخاب">
	</div>
	
	<div class="d-flex flex-row justify-content-around">
		<button id="addResFormSubmit" type="submit" class="btn btn-primary col-md-3 mt-3"><%=formSubmitText%></button>
	</div>
	
</form>